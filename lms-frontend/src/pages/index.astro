---
import {SITE_TITLE_SUFFIX} from "@/consts"
import PublicLayout from '@/layouts/PublicLayout.astro'
---

<PublicLayout>
    <div class="container mx-auto p-2">
        <div class="flex flex-col w-full min-h-100 bg-blue-800 py-20 px-4 justify-center items-center rounded-2xl text-center">
            <h1 class="text-3xl md:text-4xl mb-12 font-bold">Welcome to {SITE_TITLE_SUFFIX}</h1>
            <a href="/auth"
               class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition disabled:opacity-50"
            >
                Login
            </a>
        </div>
    </div>
</PublicLayout>
